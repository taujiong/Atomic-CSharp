@model Atomic.UnifiedAuth.Models.ExternalLoginPartialModel

  @if (Model.ExternalLogins.Any())
  {
    <div class="has-text-centered my-5">
      <span>@_localizer[$"Use another service to {Model.Action}"]</span>
    </div>

    <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
      <div class="columns is-centered is-mobile">
        @foreach (var provider in Model.ExternalLogins)
        {
          <button type="submit" class="social-button"
                  name="provider" value="@provider.Name">
            <svg class="iconfont">
              <use xlink:href="#icon-@provider.DisplayName?.ToLower()"></use>
            </svg>
          </button>
        }
      </div>
    </form>
  }

