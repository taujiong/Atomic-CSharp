@page

@section Head
{
  <link asp-append-version="true" href="/styles/index.css" rel="stylesheet" type="text/css" />
}

@{
  ViewData["Title"] = _localizer["Welcome"];
  var isAuthenticated = User.Identity is {IsAuthenticated: true };
  var userName = User.Identity?.Name;
}

<section class="hero is-fullheight">
  <div class="video-container">
    <video autoplay
           loop
           muted
           src="https://6a33-j3space-1712dd-1258451814.tcb.qcloud.la/night-cut.mp4?sign=416c78f4f6db31521b19220d6b7e558f&t=1603554273">
    </video>
  </div>

  <div class="hero-body">
    <div class="container has-text-centered">
      <div>
        <time class="has-text-grey-lighter is-size-1"
              id="time">
        </time>
      </div>

      @if (!isAuthenticated)
      {
        <a asp-page="/Account/Login" class="button is-light mt-2">
          @_localizer["Login"]
        </a>
      }
      else
      {
        <h1 class="has-text-grey-lighter is-size-4">
          @_localizer["HomePageGreeting"], @userName
        </h1>

        <a asp-page="/Account/Logout" class="button is-light mt-2">
          @_localizer["Logout"]
        </a>
      }
    </div>
  </div>
</section>

<script src="js/time-count.js" type="text/javascript"></script>
