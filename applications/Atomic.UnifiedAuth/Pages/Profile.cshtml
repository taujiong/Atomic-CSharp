@page
@using Atomic.AspNetCore.Users
@inject ICurrentUser _currentUser;

@{
  ViewData["Title"] = _localizer["Profile"].Value;
}

<div class="block has-text-centered">
  @_currentUser.UserName
</div>

<div class="has-text-centered">
  <a asp-page="Account/Logout" class="button is-primary">
    @_localizer["Logout"]
  </a>
</div>
